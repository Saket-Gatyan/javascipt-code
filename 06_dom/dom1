const myul = document.querySelector('ul') //selects or returns the first <ul>
 // here only one ul is available 


myul.querySelector('li') // selects or returns the first <li> ie. <li>one</li>





const turnGreen = myul.querySelector('li')
// <li>one</li> stored in variable turnGreen

turnGreen.style.backgroundColor = "green" // object hai li tag 
// this is basically obj manipulation done to turn the background of first list element green.




turnGreen.style.padding = "2px"
// 2px padding for first list element




turnGreen.innerText = "five" // change text in list element


//++++ Important things +++ ///

document.querySelectorAll('li') // returns a nodelist which not a array but some methods like forEach can be applied on it , so now

//NodeList(3) [li,li,li]
//0 : li
//1 : li
//2 : li 

const tempList = document.querySelectorAll('li') // stored in variable

tempList.style.color = 'green' // returns error

tempList[0].style.color = 'green' // works
tempList[0].style.backgroundColor = '#212121'




tempList.forEach(function (l) {l.style.backgroundColor = "green"} )  // turns every li bk color to green

// we want to use methods like map() we have to convert the nodearray to normal array


